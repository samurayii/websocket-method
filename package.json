{
    "name": "websocket-method",
    "version": "0.0.1",
    "description": "Websocket server/client with methods protocol",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samurayii/websocket-method.git"
    },
    "keywords": [
        "websocket"
    ],
    "author": "Nuzhnov A.A.",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samurayii/websocket-method/issues"
    },
    "homepage": "https://github.com/samurayii/websocket-method.git#readme",
    "scripts": {
        "build": "rimraf ./dist && npm run lint && tsc && json-key-remover",
        "dev": "ts-node ./src/app.ts --config ./config.toml",
        "lint": "eslint \"./lib/**/*.{js,ts}\" --quiet --fix && tsc --noEmit"
    },
    "devDependencies": {
        "@types/node": "^14.0.14",
        "@typescript-eslint/eslint-plugin": "^3.4.0",
        "@typescript-eslint/parser": "^3.4.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5",
        "eslint": "^7.3.1",
        "json-key-remover": "^0.0.2",
        "rimraf": "^3.0.2"
    },
    "mocha": {
        "diff": true,
        "extension": [
            "js"
        ],
        "opts": false,
        "reporter": "spec",
        "slow": 75,
        "timeout": 2000,
        "ui": "bdd",
        "spec": [
            "tests/**/*.spec.js"
        ]
    },
    "dependencies": {
        "uuid": "^8.1.0",
        "ws": "^7.3.0"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.1",
        "utf-8-validate": "^5.0.2"
    }
}
